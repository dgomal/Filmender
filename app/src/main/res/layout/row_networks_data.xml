<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:background="@color/template_grey_light"
    android:layout_marginEnd="@dimen/activity_vertical_margin_8"
    android:layout_marginRight="@dimen/activity_vertical_margin_8"
    android:padding="@dimen/activity_vertical_margin_8">

    <ImageView
        android:id="@+id/Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:contentDescription="@string/network_image" />

</LinearLayout>
