<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/activity_vertical_margin_8">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="95dp"
        android:layout_height="130dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="5dp"
        android:backgroundTint="@color/black">

        <ImageView
            android:id="@+id/Image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:contentDescription="@string/movie_poster" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/activity_vertical_margin_16"
        android:layout_marginStart="@dimen/activity_vertical_margin_16"
        android:layout_marginRight="@dimen/activity_vertical_margin_24"
        android:layout_marginEnd="@dimen/activity_vertical_margin_24">

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/voteAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/rating_black"
            android:drawableStart="@drawable/rating_black"
            android:drawablePadding="@dimen/activity_vertical_margin_8"
            android:layout_marginTop="@dimen/activity_vertical_margin_12"/>

        <TextView
            android:id="@+id/numberOfSeasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/season_black"
            android:drawableStart="@drawable/season_black"
            android:drawablePadding="@dimen/activity_vertical_margin_8"
            android:layout_marginTop="@dimen/activity_vertical_margin_4"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:drawableLeft="@drawable/calendar_black"
            android:drawableStart="@drawable/calendar_black"
            android:drawablePadding="@dimen/activity_vertical_margin_8"
            android:layout_marginTop="@dimen/activity_vertical_margin_4"/>

    </LinearLayout>

</LinearLayout>
